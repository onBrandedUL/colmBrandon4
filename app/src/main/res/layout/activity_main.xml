<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csis.lab04.MainActivity">


    <Switch
        android:text="Start/Stop"
        android:id="@+id/onOffSwitch"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:text="Recorded Playback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/audioPlaybackOnOff"
        android:layout_below="@+id/onOffSwitch"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:id="@+id/slider_1"
        android:layout_below="@+id/audioPlaybackOnOff"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUNTER VALUE"
        android:id="@+id/counter"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/audioPlaybackOnOff"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="Frequency Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counter1"
        android:layout_alignTop="@+id/audioPlaybackOnOff"
        android:layout_alignStart="@+id/counter" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/slider_2"
        android:layout_below="@+id/slider_1"
        android:layout_alignParentStart="true" />

</RelativeLayout>
